{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~abilities": ["./src/cards/models/abilities"],
      "~condition": ["./src/cards/models/condition"],
      "~effects": ["./src/cards/models/effects"],
      "~costs": ["./src/cards/models/costs"],
      "~watchers": ["./src/cards/models/watchers"],
      "~base-card": ["./src/cards/models/base.card.ts"],
      "~dialogs": ["./src/components/dialogs"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
